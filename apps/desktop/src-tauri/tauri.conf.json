{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mod-translator",
  "version": "0.1.0",
  "identifier": "com.modtranslator.desktop",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Mod Translator",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  }
}
