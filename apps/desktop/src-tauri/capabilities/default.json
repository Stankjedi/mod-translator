{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Default capabilities for Mod Translator desktop",
  "windows": ["main"],
  "permissions": [
    "core:default",

    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "opener:default",
    "fs:default",
    "stronghold:default",

    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/*" },
        { "path": "$APPDATA/*" },
        { "path": "$HOME/Steam/steamapps/workshop/content/*" }
      ]
    }
  ]
}
