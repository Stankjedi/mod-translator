{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Main window default capabilities for Mod Translator",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "event:default",
    "dialog:open",
    "opener:default",
    "fs:default",
    { "identifier": "fs:scope", "allow": [{ "path": "$HOME/*" }] },
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME/Steam/steamapps/workshop/content/*" }]
    },
    { "identifier": "fs:allow-exists", "allow": [{ "path": "$APPDATA/*" }] }
  ]
}
